# Discord Bot Configuration
# Copy this file to .env.bot for local development

# Required Discord Bot Credentials
DISCORD_PERSISTENT_BOT_TOKEN=your_bot_token_here
DISCORD_PERSISTENT_APP_ID=your_application_id_here
DISCORD_BOT_INVITE_URL=https://discord.com/api/oauth2/authorize?client_id=YOUR_CLIENT_ID&permissions=YOUR_PERMISSIONS&scope=bot%20applications.commands

# Bot Settings
BOT_NAME=FumbleBot
BOT_PREFIX=!
BOT_VERSION=1.0.0
BOT_DESCRIPTION=Discord bot for the Crit Fumble RPG community
BOT_DEFAULT_ACTIVITY=/help for commands
BOT_DEFAULT_ACTIVITY_TYPE=PLAYING
BOT_OWNER_IDS=comma,separated,discord,user,ids

# API Integration
NEXT_PUBLIC_API_URL=http://localhost:3000
BOT_API_KEY=your_secure_api_key_for_internal_communication
BOT_API_ENABLED=true
BOT_API_PORT=3001

# Database Connection (same as main app in most cases)
DATABASE_URL=postgresql://user:password@localhost:5432/critfumble

# Logging
LOG_LEVEL=info
LOG_FILE=logs/bot.log
LOG_CONSOLE=true

# Feature Flags
FEATURE_VOICE_ENABLED=true
FEATURE_MUSIC_ENABLED=false
FEATURE_ADMIN_COMMANDS=true
FEATURE_CAMPAIGN_INTEGRATION=true

# Node Environment
NODE_ENV=development
