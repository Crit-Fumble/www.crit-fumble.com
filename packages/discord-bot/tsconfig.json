{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    /* Discord Bot specific overrides */
    "module": "commonjs",
    "target": "ES2022",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",
    
    /* Project references */
    "composite": true,
    "incremental": true,
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    
    /* Declaration files */
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    
    /* Path mappings */
    "baseUrl": ".",
    "paths": {
      "@crit-fumble/core/*": ["../core/*"],
      "@crit-fumble/worldanvil/*": ["../worldanvil/*"],
      "@discord/*": ["./*"],
      "@discord/bot/*": ["./*"]
    },
    
    /* Node.js configuration */
    "types": ["node"],
    "allowJs": false
  },
  "include": [
    "models/**/*",
    "server/**/*", 
    "client/**/*",
    "index.ts",
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/__tests__/**",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "references": [
    { "path": "../core" }
  ]
}
