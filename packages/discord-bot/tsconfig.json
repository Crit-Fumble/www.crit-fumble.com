{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "composite": true,
    "incremental": true,
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@crit-fumble/*": ["../../*"],
      "@discord/*": ["../*"],
      "@discord/bot/*": ["./*"]
    }
  },
  "include": [
    "models/**/*",
    "server/**/*",
    "client/**/*",
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/__tests__/**"
  ],
  "references": [
    { "path": "../core" }
  ]
}
