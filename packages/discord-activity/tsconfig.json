{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../../dist/discord/activity",
    "rootDir": ".",
    "baseUrl": ".",
    "jsx": "react-jsx",
    "paths": {
      "@crit-fumble/*": ["../../*"],
      "@discord/*": ["../*"],
      "@discord/activity/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.js",
    "**/*.tsx",
    "**/*.jsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.js"
  ],
}
