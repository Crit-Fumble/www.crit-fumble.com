{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "composite": true,
    "incremental": true,
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "module": "commonjs",
    "target": "es2022"
  },
  "include": [
    "models/**/*",
    "server/**/*", 
    "client/**/*",
    "utils/**/*",
    "index.ts",
    "prisma/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/__tests__/**"
  ],
  "references": [
    { "path": "../worldanvil" }
  ]
}
