generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model Account {
  id                       String  @id
  userId                   String
  type                     String
  provider                 String
  providerAccountId        String
  refresh_token            String?
  refresh_token_expires_in Int?
  access_token             String?
  expires_at               Int?
  token_type               String?
  scope                    String?
  id_token                 String?
  session_state            String?
  oauth_token_secret       String?
  oauth_token              String?
  User                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Example {
  id            Int     @id @default(autoincrement())
  name          String?
  description   String?
  domainCount   Int?
  url           String?
  image         String?
  imageBlurhash String?
}

model Post {
  id            String   @id
  title         String?
  description   String?
  content       String?
  slug          String   @unique
  image         String?  @default("https://public.blob.vercel-storage.com/eEZHAoPTOBSYGBE3/hxfcV5V-eInX3jbVUhjAt1suB7zB88uGd1j20b.png")
  imageBlurhash String?  @default("data:image/png;base64,")
  createdAt     DateTime @default(now())
  updatedAt     DateTime
  published     Boolean  @default(false)
  siteId        String?
  userId        String?
  Site          Site?    @relation(fields: [siteId], references: [id], onDelete: Cascade)
  User          User?    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([slug, siteId])
  @@index([siteId])
  @@index([userId])
}

model Session {
  id           String   @id
  sessionToken String   @unique
  userId       String
  expires      DateTime
  User         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Site {
  id            String   @id
  name          String?
  description   String?
  logo          String?  @default("https://public.blob.vercel-storage.com/eEZHAoPTOBSYGBE3/JRajRyC-PhBHEinQkupt02jqfKacBVHLWJq7Iy.png")
  font          String   @default("font-cal")
  image         String?  @default("https://public.blob.vercel-storage.com/eEZHAoPTOBSYGBE3/hxfcV5V-eInX3jbVUhjAt1suB7zB88uGd1j20b.png")
  imageBlurhash String?  @default("data:image/png;base64,")
  subdomain     String?  @unique
  customDomain  String?  @unique
  message404    String?  @default("Blimey! You've found a page that doesn't exist.")
  createdAt     DateTime @default(now())
  updatedAt     DateTime
  userId        String?
  Post          Post[]
  User          User?    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model User {
  id             String          @id
  name           String?
  slug           String?         @unique
  email          String?         @unique
  emailVerified  DateTime?
  image          String?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @default(now())
  admin          Boolean?        @default(false)
  discord        String?
  roll20         String?
  dd_beyond      String?
  world_anvil    String?
  sheet_data     Json?
  Account        Account[]
  Post           Post[]
  Session        Session[]
  Site           Site[]
  UserDndBeyond  UserDndBeyond?  @relation(fields: [dd_beyond], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "dd_beyond")
  UserDiscord    UserDiscord?    @relation(fields: [discord], references: [id], onDelete: Cascade, map: "discord")
  UserRoll20     UserRoll20?     @relation(fields: [roll20], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "roll20")
  UserWorldAnvil UserWorldAnvil? @relation(fields: [world_anvil], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "world_anvil")
}

model UserDiscord {
  id            String   @id
  name          String?
  displayName   String?
  accent_color  BigInt?
  avatar        String?
  banner        String?
  banner_color  String?
  discriminator String?
  email         String?
  flags         BigInt?
  global_name   String?
  image_url     String?
  locale        String?
  mfa_enabled   Boolean?
  premium_type  BigInt?
  public_flags  BigInt?
  username      String?
  verified      Boolean?
  User          User[]
}

model UserDndBeyond {
  id   String  @id
  name String?
  User User[]
}

model UserRoll20 {
  id   String  @id(map: "id")
  slug String? @unique
  name String?
  User User[]
}

model UserWorldAnvil {
  id   String  @id
  slug String? @unique
  name String?
  User User[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Campaign {
  id                 String              @id
  name               String?
  slug               String?             @unique
  game_system_id     String?
  gms                String[]
  active             Boolean?
  world_anvil        String?
  discord            String?
  sheet_data         Json?
  CampaignDiscord    CampaignDiscord?    @relation(fields: [discord], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "discord")
  CampaignWorldAnvil CampaignWorldAnvil? @relation(fields: [world_anvil], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "world_anvil")
  game_system        GameSystem?         @relation(fields: [game_system_id], references: [id])
  parties            Party[]
  character_sheets   CharacterSheet[]
  characters         Character[] // Legacy relation, use character_sheets instead
}

model CampaignDiscord {
  id                  String     @id
  fumbleBotId         String?
  playerRoles         String[]
  gmRoles             String[]
  botRoles            String[]
  forumChannelId      String?
  playByPostChannelId String?
  voiceChannelId      String?
  serverId            String?
  Campaign            Campaign[]
}

model CampaignWorldAnvil {
  id            String     @id
  name          String?
  slug          String?    @unique
  worldMapId    String?
  chronicleId   String?
  chronicleSlug String?
  Campaign      Campaign[]
}

model GameSystem {
  id               String           @id
  name             String?
  slug             String?          @unique
  description      String?
  srdApi           String?
  sheet_data       Json?
  campaigns        Campaign[]
  character_sheets CharacterSheet[]
  characters       Character[] // Legacy relation, use character_sheets instead
}

model Character {
  id               String           @id
  player           String?
  name             String?
  slug             String?          @unique
  title            String?
  summary          String?
  description      String?          @db.Text
  portrait_url     String?
  token_url        String?
  created_at       DateTime         @default(now())
  updated_at       DateTime         @default(now())
  character_sheets CharacterSheet[]
  GameSystem       GameSystem?      @relation(fields: [gameSystemId], references: [id])
  gameSystemId     String?
  campaigns        Campaign[] // Legacy relation, opposite of Campaign.characters
  parties          Party[] // Legacy relation, opposite of Party.characters
}

model GameSession {
  id         String   @id(map: "PartySession_pkey")
  day        String?
  times      String[]
  sheet_data Json?
}

model Party {
  id               String           @id
  campaign_id      String?
  gm               String?
  slug             String?          @unique
  name             String?
  active           Boolean?
  session          String?
  dd_beyond        String?
  roll20           String?
  discord          String?
  parentParty      String?
  sheet_data       Json?
  campaign         Campaign?        @relation(fields: [campaign_id], references: [id])
  characters       Character[] // Legacy relation, use character_sheets instead
  character_sheets CharacterSheet[]
}

model PartyDndBeyond {
  id   String  @id
  join String?
}

model PartyRoll20 {
  id   String  @id
  join String?
}

model PartyDiscord {
  id               String  @id
  roleId           String?
  voiceChannelId   String?
  sideChatThreadId String?
  questLogThreadId String?
  gameplayThreadId String?
}

model CharacterSheet {
  id             String  @id @default(cuid())
  character_id   String
  game_system_id String
  campaign_id    String?
  party_id       String?

  sheet_data       Json?
  integration_data Json?
  title            String?
  summary          String?
  description      String? @db.Text
  bio              String? @db.Text
  history          String? @db.Text

  version       Int @default(1)
  display_order Int @default(0)

  is_active  Boolean @default(false)
  admin_only Boolean @default(false)

  last_played DateTime?
  created_at  DateTime  @default(now())
  updated_at  DateTime  @default(now())

  character   Character  @relation(fields: [character_id], references: [id], onDelete: Cascade)
  game_system GameSystem @relation(fields: [game_system_id], references: [id], onDelete: Cascade)
  campaign    Campaign?  @relation(fields: [campaign_id], references: [id], onDelete: SetNull)
  party       Party?     @relation(fields: [party_id], references: [id], onDelete: SetNull)

  @@index([character_id], map: "CharacterSheet_character_id_idx")
  @@index([game_system_id], map: "CharacterSheet_game_system_id_idx")
  @@index([is_active], map: "CharacterSheet_is_active_idx")
}
