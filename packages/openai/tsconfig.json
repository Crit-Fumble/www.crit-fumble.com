{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "outDir": "dist",
    "rootDir": ".",
    "declaration": true
  },
  "include": ["models/**/*", "server/**/*", "client/**/*", "index.ts"],
  "exclude": ["node_modules", "dist", "**/__tests__/**"]
}
