{
  "compilerOptions": {
    /* Common base options for all packages */
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    
    /* Type checking */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    
    /* Module resolution */
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2022",
    "lib": ["ES2022"]
  }
}