{
  "compilerOptions": {
    /* Common base options for all packages */
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    
    /* Type checking */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    
    /* Module resolution */
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": ".",
    
    /* Path mappings for workspace packages */
    // TODO: add other packages when they are ready
    "paths": {
      "@crit-fumble/core/*": ["./packages/core/*"],
      "@crit-fumble/worldanvil/*": ["./packages/worldanvil/*"]
    }
  },
  "exclude": ["node_modules", "**/dist/**"],
  "references": [
    { "path": "./packages/core" },
    { "path": "./packages/worldanvil" },
    { "path": "./packages/discord-bot" }
  ]
}
