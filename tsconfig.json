{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@crit-fumble/core/*": ["./packages/core/*"],
      "@crit-fumble/next/*": ["./packages/next/*"],
      "@crit-fumble/discord/*": ["./packages/discord/*"],
    }
  },
  "include": ["./packages/next-web/next-env.d.ts", "**/*.ts", "**/*.tsx", "./.next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
