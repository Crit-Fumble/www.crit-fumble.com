{
  "compilerOptions": {
    /* Common base options for all packages */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    
    /* Type checking */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    
    /* Module resolution */
    "moduleResolution": "node",
    "baseUrl": ".",
    
    /* Path mappings for workspace packages */
    "paths": {
      "@crit-fumble/core/*": ["./packages/core/*"],
      "@crit-fumble/discord/*": ["./packages/discord/*"],
      "@crit-fumble/worldanvil/*": ["./packages/worldanvil/*"],
      "@crit-fumble/openai/*": ["./packages/openai/*"],
      "@crit-fumble/next/*": ["./packages/next/*"],
      "@crit-fumble/discord-bot/*": ["./packages/discord-bot/*"]
    }
  },
  "exclude": ["node_modules", "**/dist/**"]
}
