# Crit-Fumble Development Environment Variables
# This file is set up for local development with Docker

# === DATABASE CONFIGURATION ===
# PostgreSQL connection details for Docker container
POSTGRES_PRISMA_URL=postgresql://postgres:dev_password_123@localhost:5432/crit_fumble
POSTGRES_URL=postgresql://postgres:dev_password_123@localhost:5432/crit_fumble
POSTGRES_URL_NO_SSL=postgresql://postgres:dev_password_123@localhost:5432/crit_fumble?sslmode=disable
POSTGRES_URL_NON_POOLING=postgresql://postgres:dev_password_123@localhost:5432/crit_fumble?connection_limit=1
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=dev_password_123
POSTGRES_DATABASE=crit_fumble

# === DISCORD INTEGRATION ===
# Discord application credentials (add your own)
DISCORD_APP_ID=your_discord_app_id_here
DISCORD_PUBLIC_KEY=your_discord_public_key_here
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# === WORLDANVIL INTEGRATION ===
# World Anvil API credentials (add your own)
WORLDANVIL_API_KEY=your_worldanvil_api_key_here
WORLDANVIL_APP_KEY=your_worldanvil_app_key_here

# === OPENAI INTEGRATION ===
# OpenAI API credentials (add your own)
OPENAI_API_KEY=your_openai_api_key_here

# === NEXT.JS CONFIGURATION ===
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# === DEVELOPMENT SETTINGS ===
NODE_ENV=development