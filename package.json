{
  "name": "crit-fumble-monorepo",
  "version": "0.2.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/web",
    "packages/discord",
    "packages/lib"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=packages/web",
    "build": "npm run build --workspace=packages/web",
    "start": "npm run start --workspace=packages/web",
    "lint": "eslint .",

    "test": "jest",
    "test:web": "jest --config=jest.app.config.js",
    "test:discord": "jest --config=jest.config.bot.cjs",
    "test:lib": "jest --config=jest.lib.config.js",

    "data:install": "npm install --workspace=packages/lib/data",
    "data:pull": "npm run pull --workspace=packages/lib/data",
    "data:generate": "npm run generate --workspace=packages/lib/data",
    "data:dev": "npm run dev --workspace=packages/lib/data",
    "data:deploy": "npm run deploy --workspace=packages/lib/data",
    "data:reset": "npm run reset --workspace=packages/lib/data",
    "data:push": "npm run push --workspace=packages/lib/data",
    "data:seed": "npm run seed --workspace=packages/lib/data",

    "web:install": "npm install --workspace=packages/web",
    "web:dev": "npm run dev --workspace=packages/web",
    "web:build": "npm run build --workspace=packages/web",
    "web:start": "npm run start --workspace=packages/web",
    "web:lint": "npm run lint --workspace=packages/web",
    "web:test": "npm run test --workspace=tests/web",

    "discord:install": "npm install --workspace=packages/discord",
    "discord:bot:dev": "npm run dev --workspace=packages/discord/bot",
    "discord:bot:build": "npm run build --workspace=packages/discord/bot",
