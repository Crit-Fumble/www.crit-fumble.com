{
  "name": "crit-fumble-monorepo",
  "version": "0.2.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/web",
    "packages/discord",
    "packages/lib"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=packages/web",
    "build": "npm run build --workspace=packages/web",
    "start": "npm run start --workspace=packages/web",
    "lint": "eslint .",
    "test": "jest",
    "test:web": "jest --config=jest.app.config.js",
    "test:discord": "jest --config=jest.config.bot.cjs",
    "test:lib": "jest --config=jest.lib.config.js",
    "prisma:pull": "prisma db pull",
    "prisma:generate": "prisma generate",
    "prisma:dev": "prisma migrate dev",
    "prisma:create": "prisma migrate dev --create-only",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:reset": "prisma migrate reset",
    "prisma:push": "prisma db push",
    "prisma:seed": "prisma db seed"
  },
  "prisma": {
    "seed": "ts-node scripts/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.8.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.24",
    "eslint": "^8",
    "jest": "^29.7.0",
    "prisma": "^6.8.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  }
}
