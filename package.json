    "lib:discord:activity:dev": "npm run dev --workspace=packages/lib/discord/activity",
    "lib:discord:activity:start": "npm run start --workspace=packages/lib/discord/activity",
    "lib:discord:activity:lint": "npm run lint --workspace=packages/lib/discord/activity",
    "lib:discord:activity:test": "npm run test --workspace=packages/lib/discord/activity"
