{
  "name": "crit-fumble-monorepo",
  "version": "0.2.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "build:all": "tsc -b",
    "build:optimized": "node scripts/build-optimized.js build",
    "build:clean": "tsc -b --clean",
    "build:force": "tsc -b --force",
    "build:watch": "tsc -b --watch",
    "build:verbose": "node scripts/build-optimized.js build --verbose",
    "clean": "find ./packages -type d -name dist -exec rm -rf {} +",
    "clean:cache": "node scripts/build-optimized.js clean --cache",
    "dev": "npm run dev --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "lint:all": "npm run lint --workspaces",
    "create-package": "node scripts/create-package.js",
    "create-component": "node scripts/create-component.js"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.24",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  }
}
