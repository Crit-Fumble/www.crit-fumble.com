    "discord:app:test": "npm run test --workspace=tests/discord/app",
    "discord:activity:dev": "npm run dev --workspace=packages/discord/activity",
    "discord:activity:build": "npm run build --workspace=packages/discord/activity",
    "discord:activity:start": "npm run start --workspace=packages/discord/activity",
    "discord:activity:lint": "npm run lint --workspace=packages/discord/activity",
    "discord:activity:test": "npm run test --workspace=tests/discord/activity",

    "lib:install": "npm install --workspace=packages/lib",
    "lib:build": "npm run build --workspace=packages/lib",
    "lib:lint": "npm run lint --workspace=packages/lib",
    "lib:test": "npm run test --workspace=tests/lib",

    "lib:discord:install": "npm install --workspace=packages/lib/discord",
    "lib:discord:build": "npm run build --workspace=packages/lib/discord",
    "lib:discord:dev": "npm run dev --workspace=packages/lib/discord",
    "lib:discord:lint": "npm run lint --workspace=packages/lib/discord",
    "lib:discord:test": "npm run test --workspace=packages/lib/discord",

    "lib:discord:bot:install": "npm install --workspace=packages/lib/discord/bot",
    "lib:discord:bot:build": "npm run build --workspace=packages/lib/discord/bot",
    "lib:discord:bot:dev": "npm run dev --workspace=packages/lib/discord/bot",
    "lib:discord:bot:start": "npm run start --workspace=packages/lib/discord/bot",
    "lib:discord:bot:lint": "npm run lint --workspace=packages/lib/discord/bot",
    "lib:discord:bot:test": "npm run test --workspace=packages/lib/discord/bot",

