FROM node:22-alpine

WORKDIR /app

# Copy package file
COPY package.json ./

# Install dependencies (use npm install since we don't have package-lock.json in monorepo)
RUN npm install --only=production

# Copy compiled bot code
COPY dist ./dist

# Set environment variables
ENV NODE_ENV=production

# Command to run the bot
CMD ["node", "dist/index.js"]
